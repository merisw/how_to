<div id='step'>
  <h2><%= @step.order %></h2>

  <%= simple_format(@step.description) %>

  <%= link_to "Edit Step", [:edit, @instruction, @step] %>
  <%= link_to "Delete Step", [@instruction, @step], :method => :delete, :confirm => "Are you sure you want to delete this step?" %>
  <%= link_to "Add Step", new_instruction_step_path(@instruction) %>
</div>
